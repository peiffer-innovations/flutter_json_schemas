{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/decoration_position.json",
  "$comment": "https://api.flutter.dev/flutter/rendering/DecorationPosition-class.html",
  "type": "string",
  "title": "DecorationPosition",
  "oneOf": [
    {
      "type": "string",
      "enum": [
        "background",
        "foreground"
      ]
    },
    {
      "type": "string",
      "pattern": "^\\{\\{.*\\}\\}$"
    },
    {
      "type": "string",
      "pattern": "##.*##$"
    },
    {
      "type": "string",
      "pattern": "\\$\\{.*\\}$"
    }
  ]
}
{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/target_platform.json",
  "$comment": "https://api.flutter.dev/flutter/foundation/TargetPlatform-class.html",
  "title": "TargetPlatform",
  "type": "string",
  "oneOf": [
    {
      "type": "string",
      "enum": [
        "android",
        "fuchsia",
        "iOS",
        "linux",
        "macOS",
        "windows"
      ]
    },
    {
      "type": "string",
      "pattern": "^\\{\\{.*\\}\\}$"
    },
    {
      "type": "string",
      "pattern": "##.*##$"
    },
    {
      "type": "string",
      "pattern": "\\$\\{.*\\}$"
    }
  ]
}
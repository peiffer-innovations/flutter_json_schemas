{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/blur_style.json",
  "$comment": "https://api.flutter.dev/flutter/painting/BoxShadow/blurStyle.html",
  "type": "string",
  "title": "BlurStyle",
  "oneOf": [
    {
      "type": "string",
      "enum": [
        "inner",
        "normal",
        "outer",
        "solid"
      ]
    },
    {
      "type": "string",
      "pattern": "^\\{\\{.*\\}\\}$"
    },
    {
      "type": "string",
      "pattern": "##.*##$"
    },
    {
      "type": "string",
      "pattern": "\\$\\{.*\\}$"
    }
  ]
}
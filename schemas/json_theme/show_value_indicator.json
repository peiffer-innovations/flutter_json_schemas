{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/show_value_indicator.json",
  "type": "string",
  "title": "ShowValueIndicator",
  "oneOf": [
    {
      "type": "string",
      "enum": [
        "always",
        "alwaysVisible",
        "never",
        "onDrag",
        "onlyForContinuous",
        "onlyForDiscrete"
      ]
    },
    {
      "type": "string",
      "pattern": "^\\{\\{.*\\}\\}$"
    },
    {
      "type": "string",
      "pattern": "##.*##$"
    },
    {
      "type": "string",
      "pattern": "\\$\\{.*\\}$"
    }
  ]
}
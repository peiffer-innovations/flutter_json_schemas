{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/brightness.json",
  "$comment": "https://api.flutter.dev/flutter/dart-ui/Brightness-class.html",
  "type": "string",
  "title": "Brightness",
  "oneOf": [
    {
      "type": "string",
      "enum": [
        "dark",
        "light"
      ]
    },
    {
      "type": "string",
      "pattern": "^\\{\\{.*\\}\\}$"
    },
    {
      "type": "string",
      "pattern": "##.*##$"
    },
    {
      "type": "string",
      "pattern": "\\$\\{.*\\}$"
    }
  ]
}
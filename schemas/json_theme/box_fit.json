{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/box_fit.json",
  "type": "string",
  "title": "BoxFit",
  "oneOf": [
    {
      "type": "string",
      "enum": [
        "contain",
        "cover",
        "fill",
        "fitHeight",
        "fitWidth",
        "none",
        "scaleDown"
      ]
    },
    {
      "type": "string",
      "pattern": "^\\{\\{.*\\}\\}$"
    },
    {
      "type": "string",
      "pattern": "##.*##$"
    }
  ]
}
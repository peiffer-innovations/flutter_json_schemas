{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/input_border.json",
  "title": "InputBorder",
  "type": "object",
  "required": [
    "type"
  ],
  "properties": {
    "borderRadius": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "$ref": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/border_radius.json"
        }
      ]
    },
    "borderSide": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "$ref": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/border_side.json"
        }
      ]
    },
    "gapPadding": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "number"
        }
      ]
    },
    "type": {
      "type": "string",
      "enum": [
        "outline",
        "underline"
      ]
    }
  }
}
{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/text_align_vertical.json",
  "title": "TextAlignVertical",
  "type": "string",
  "oneOf": [
    {
      "type": "string",
      "enum": [
        "bottom",
        "center",
        "top"
      ]
    },
    {
      "type": "string",
      "pattern": "^\\{\\{.*\\}\\}$"
    },
    {
      "type": "string",
      "pattern": "##.*##$"
    }
  ]
}
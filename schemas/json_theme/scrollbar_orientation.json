{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/scrollbar_orientation.json",
  "$comment": "https://api.flutter.dev/flutter/widgets/ScrollbarOrientation.html",
  "type": "string",
  "title": "ScrollbarOrientation",
  "oneOf": [
    {
      "type": "string",
      "enum": [
        "bottom",
        "left",
        "right",
        "top"
      ]
    },
    {
      "type": "string",
      "pattern": "^\\{\\{.*\\}\\}$"
    },
    {
      "type": "string",
      "pattern": "##.*##$"
    },
    {
      "type": "string",
      "pattern": "\\$\\{.*\\}$"
    }
  ]
}
{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/max_length_enforcement.json",
  "$comment": "https://api.flutter.dev/flutter/services/MaxLengthEnforcement-class.html",
  "title": "MaxLengthEnforcement",
  "type": "string",
  "oneOf": [
    {
      "type": "string",
      "enum": [
        "enforced",
        "none",
        "truncateAfterCompositionEnds"
      ]
    },
    {
      "type": "string",
      "pattern": "^\\{\\{.*\\}\\}$"
    },
    {
      "type": "string",
      "pattern": "##.*##$"
    },
    {
      "type": "string",
      "pattern": "\\$\\{.*\\}$"
    }
  ]
}
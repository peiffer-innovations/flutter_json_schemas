{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/text_decoration.json",
  "$comment": "https://api.flutter.dev/flutter/dart-ui/TextDecoration-class.html",
  "title": "TextDecoration",
  "type": "string",
  "oneOf": [
    {
      "type": "string",
      "enum": [
        "lineThrough",
        "none",
        "overline",
        "underline"
      ]
    },
    {
      "type": "string",
      "pattern": "^\\{\\{.*\\}\\}$"
    },
    {
      "type": "string",
      "pattern": "##.*##$"
    },
    {
      "type": "string",
      "pattern": "\\$\\{.*\\}$"
    }
  ]
}
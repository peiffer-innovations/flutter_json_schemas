{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/box_shape.json",
  "$comment": "https://api.flutter.dev/flutter/painting/BoxShape-class.html",
  "type": "string",
  "title": "BoxShape",
  "oneOf": [
    {
      "type": "string",
      "enum": [
        "circle",
        "rectangle"
      ]
    },
    {
      "type": "string",
      "pattern": "^\\{\\{.*\\}\\}$"
    },
    {
      "type": "string",
      "pattern": "##.*##$"
    },
    {
      "type": "string",
      "pattern": "\\$\\{.*\\}$"
    }
  ]
}
{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/border_style.json",
  "$comment": "https://api.flutter.dev/flutter/painting/BorderStyle-class.html",
  "type": "string",
  "title": "BorderStyle",
  "oneOf": [
    {
      "type": "string",
      "enum": [
        "none",
        "solid"
      ]
    },
    {
      "type": "string",
      "pattern": "^\\{\\{.*\\}\\}$"
    },
    {
      "type": "string",
      "pattern": "##.*##$"
    },
    {
      "type": "string",
      "pattern": "\\$\\{.*\\}$"
    }
  ]
}
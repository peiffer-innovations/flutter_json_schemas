{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_dynamic_widget/text.json",
  "$comment": "https://api.flutter.dev/flutter/widgets/Text-class.html",
  "type": "object",
  "title": "Text",
  "additionalProperties": false,
  "required": [
    "text"
  ],
  "properties": {
    "locale": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "$ref": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/locale.json"
        }
      ]
    },
    "maxLines": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "number"
        }
      ]
    },
    "overflow": {
      "$ref": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/text_overflow.json"
    },
    "selectionColor": {
      "$ref": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/color.json"
    },
    "semanticsLabel": {
      "type": "string"
    },
    "softWrap": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "number"
        },
        {
          "type": "boolean"
        }
      ]
    },
    "strutStyle": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "$ref": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/strut_style.json"
        }
      ]
    },
    "style": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "$ref": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/text_style.json"
        }
      ]
    },
    "text": {
      "type": "string"
    },
    "textAlign": {
      "$ref": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/text_align.json"
    },
    "textDirection": {
      "$ref": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/text_direction.json"
    },
    "textHeightBehavior": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "$ref": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/text_height_behavior.json"
        }
      ]
    },
    "textScaleFactor": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "number"
        }
      ]
    },
    "textWidthBasis": {
      "$ref": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/text_width_basis.json"
    }
  }
}
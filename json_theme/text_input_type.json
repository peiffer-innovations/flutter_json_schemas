{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/text_input_type.json",
  "$comment": "https://api.flutter.dev/flutter/services/TextInputType-class.html",
  "title": "TextInputType",
  "type": "string",
  "oneOf": [
    {
      "type": "string",
      "enum": [
        "datetime",
        "emailAddress",
        "multiline",
        "name",
        "number",
        "phone",
        "streetAddress",
        "text",
        "url",
        "visiblePassword"
      ]
    },
    {
      "type": "string",
      "pattern": "^\\{\\{.*\\}\\}$"
    },
    {
      "type": "string",
      "pattern": "##.*##$"
    }
  ]
}